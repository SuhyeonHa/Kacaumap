<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="15dp"
    android:padding="10dp">


    <TextView
        android:id="@+id/textView_list_building"
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_margin="1dp"
        android:padding="1dp" />


    <TextView
        android:id="@+id/textView_list_roomNum"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_margin="1dp"
        android:padding="1dp" />


    <TextView
        android:id="@+id/textView_list_name"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_margin="1dp"
        android:padding="1dp" />


    <TextView
        android:id="@+id/textView_list_purpose"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_margin="1dp"
        android:padding="1dp" />


    <TextView
        android:id="@+id/textView_list_dept"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_margin="1dp"
        android:padding="1dp" />


    <TextView
        android:id="@+id/textView_list_telephone"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_margin="1dp"
        android:padding="1dp" />

</LinearLayout>